---
section: tag-page
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
permalink: /tags/{{ tag }}/
layout: layouts/base.njk
renderData:
  title: "Tagged “{{ tag }}”"
  metaDescription: "All posts from the Blog tagged with “{{ tag }}”"
---

<div class="tag-headline">
  <h1>Tag “{{ tag }}”</h1>
</div>

<main class="articles">

  {% set postslist = collections[tag] %}
  {% include "components/postslist.njk" %}

  <nav>
    <a href="{{ '/blog/' | url }}">← Blog index</a>
  </nav>

</main>
